{
  "manifest_version": 2,
  "name": "Driftr Ext.",
  "description": "Monitoring blinking rate to determine how tired you are.",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}